{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ES2023"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",                        // ✅ base para alias
    "paths": {
      "@/*": ["src/*"]                    // ✅ caminho do alias "@"
    },
    "types": ["node"],                    // ✅ para path, fs, etc
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true
  },
  "include": ["src", "vite.config.ts"]
}
